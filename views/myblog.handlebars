<div class="card-list">
  {{#each blogs}}
    <div class="card">
      <a href="/blog-detail/{{this._id}}"><h2
          class="card-title"
        >{{this.title}}</h2></a>
      <p class="card-author">Tác giả: {{this.author}}</p>
      <p class="card-date">Ngày tạo: {{this.date}}</p>
      <a href="/delete-blog/{{this._id}}" type="button"><button
          class="btn-del"
        >Xoa</button></a>
      <a href="/update-blog/{{this._id}}" type="button"><button
          class="btn-upd"
        >Sua</button></a>
    </div>
  {{/each}}
</div>

<link rel="stylesheet" href="/css/myblog.css" />